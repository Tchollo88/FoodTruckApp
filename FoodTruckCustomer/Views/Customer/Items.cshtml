@using Repository.Models.Menu
@using FoodTruckCustomer.Controllers
﻿@{
    Layout = "_Layout";
}
@model IEnumerable<Repository.Models.Menu.Item>

@{
    ViewData["Title"] = "Menu";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td> @Html.Display("No items available")</td>
            </tr>
        }
        else
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Create" asp-route-id="@item.Item_ID">Add to Cart</a> |
                        <a asp-action="Details" asp-route-id="@item.Item_ID">Details</a> |

                    </td>
                </tr>
            }
    </tbody>
</table>