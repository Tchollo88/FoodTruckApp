@model Repository.Models.Menu.lineItem

@{
    ViewData["Title"] = "Add to Cart";
}

<h2>Add Item(s) to Cart</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Hidden fields to store Item_ID and Order_ID -->
    <input type="hidden" asp-for="Item_ID" />
    <input type="hidden" asp-for="Order_ID" />

    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>

<div>
    <a asp-controller="Customer" asp-action="Items">Back to Items</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
