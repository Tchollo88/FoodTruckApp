@model IEnumerable<Repository.Models.Menu.lineItem>

@{
    ViewData["Title"] = "Cart";
}

<h1>Index</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Item_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                    </td>
                    <td>
                        <a asp-action="SingleAddAsync" asp-route-id="@item.Order_ID">Add</a> |
                        <a asp-action="SingleSubtractAsync" asp-route-id="@item.Order_ID">Subtract</a> |
                        <a asp-action="Delete" asp-route-id="@item.Order_ID">Remove</a>
                    </td>
                </tr>
            }
            @*         <a asp-action="Checkout" asp-route-id="@item.Order_ID">Checkout</a> *@
        </tbody>
    </table>
}
