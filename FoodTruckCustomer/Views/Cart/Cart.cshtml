@model IEnumerable<Repository.Models.Menu.Order>

@{
    ViewData["Title"] = "Cart";
}

<h2>Shopping Cart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Items</th>
            <th>Subtotal ($)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Order_ID</td>
                <td>
                    <ul>
                        @foreach (var item in order.LineItems)
                        {
                            <li>@item.Item.Name - Quantity: @item.Quantity - Price: $@(item.Item.Price * item.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>@order.SubTotal.ToString("C")</td>
                <td>
                    <form asp-action="AdjustCountAsync" method="post">
                        <input type="hidden" name="orderId" value="@order.Order_ID" />
                        <label for="itemId">Item:</label>
                        <select name="itemId" required>
                            @foreach (var item in ViewBag.Items)
                            {
                                <option value="@item.Item_ID">@item.Name - $@item.Price</option>
                            }
                        </select>
                        <label for="qty">Quantity:</label>
                        <input type="number" name="qty" min="1" required />
                       <form>
                            <button type="submit">[ + ]</button>
                            <button type="submit">[ - ]</button>
                       </form>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
}
