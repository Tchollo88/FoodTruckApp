@model Repository.Models.Menu.Order
@{
    Layout = "_Layout";
}

<h1>Your Cart</h1>

@if (Model?.LineItems.Count == 0)
{
    <p>Your cart is empty. <a href="@Url.Action("Items", "Customer")">Add some items!</a></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lineItem in Model.LineItems)
            {
                <tr>
                    <td>@lineItem.Item.Name</td>
                    <td>@lineItem.Item.Price.ToString("C")</td>
                    <td>
                        <form asp-action="AdjustQuantity" asp-controller="Cart" method="post">
                            <input type="hidden" name="lineItemId" value="@lineItem.lineItem_ID" />
                            <button type="submit" name="qty" value="1" class="btn btn-primary"> [+] </button>
                            <button type="submit" name="qty" value="-1" class="btn btn-primary"> [-] </button>
                        </form>
                    </td>
                    <td>@(lineItem.Quantity * lineItem.Item.Price).ToString("C")</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Cart" method="post">
                            <input type="hidden" name="lineItemId" value="@lineItem.lineItem_ID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total:</strong></td>
                <td><strong>@Model.SubTotal.ToString("C")</strong></td>
                <td>
                    <a asp-action="Checkout" asp-controller="Receipts" asp-route-orderId="@Model.Order_ID" class="btn btn-success">Proceed to Checkout</a>
                </td>
            </tr>
        </tfoot>
    </table>
}

