@model IEnumerable<Repository.Models.Menu.Receipt>

@{
    ViewData["Title"] = "Sales Report";
}

<h1>SalesReport</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receipt_ID).Split('_').First()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice).Insert(5, " ")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Receipt_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Receipt_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Receipt_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Receipt_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
